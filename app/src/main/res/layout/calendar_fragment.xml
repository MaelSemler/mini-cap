<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_layout">
            <TextView
                android:id="@+id/month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Dec-2020"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/week_randge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="week"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/month_year"
                android:textSize="18dp"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/week_randge"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/previous_week_arrow" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/week_randge"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/next_week_arrow" />

            <LinearLayout
                android:id="@+id/week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/week_randge"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sun" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Wed" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Thu" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fri" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sat" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/week_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/week"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="0dp"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/week_layout"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="12AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="1AM" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="2AM" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="3AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="4AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="5AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="6AM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="7AM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="8AM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="9AM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="10AM" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="11AM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="12PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="1PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="2PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="3PM" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="4PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="5PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="6PM" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="7PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="8PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="9PM" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="10PM" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_60"
                        android:text="11PM" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/time"

                    android:layout_toRightOf="@+id/time">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="7"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/sunday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/monday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tuesday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/wednesday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/thursday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/friday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/saturday"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:layout_marginTop="100dp"
                                android:text="test"/>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</FrameLayout>