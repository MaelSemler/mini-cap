<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_results.SearchResultsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/cancel_search"
                android:background="@drawable/round_rectangle_white"
                android:drawableLeft="@drawable/search"/>
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableTint="@color/red_transparent"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:paddingEnd="40dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/search_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/searchBar"
                android:background="@drawable/round_rectangle_white"
                android:paddingHorizontal="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <Button
                android:id="@+id/cancel_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/return_arrow_search" />
            <Button
                android:id="@+id/clear_input"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/searchBar"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/red_transparent"
                android:background="@drawable/exit_red"/>

<!--
it's all about the searchView. It can do a lot for this fragment
Change the edit text to a searchView
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle_white"
                android:focusable="true">

            </SearchView>
            -->

            </RelativeLayout>
    </RelativeLayout>
</FrameLayout>