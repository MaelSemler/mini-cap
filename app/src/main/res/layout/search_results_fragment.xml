<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_results.SearchResultsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- for debugging purposes-->

        <EditText
            android:id="@+id/edSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="80dp"

            android:background="@drawable/round_rectangle_white"
            android:drawableLeft="@drawable/search"
            android:paddingEnd="40dp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/cancel_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edSearchResults"
            android:layout_alignBottom="@+id/edSearchResults"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"

            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/return_arrow_search" />

        <ImageButton
            android:id="@+id/clear_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edSearchResults"
            android:layout_alignEnd="@+id/edSearchResults"
            android:layout_alignBottom="@+id/edSearchResults"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/exit_red" />

    </RelativeLayout>

</FrameLayout>