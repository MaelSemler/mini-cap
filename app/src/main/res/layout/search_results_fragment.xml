<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_results.SearchResultsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/clear_input"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/edSearchResults"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/exit_red"
                android:elevation="15dp"/>

            <EditText
                android:id="@+id/edSearchResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/cancel_search"
                android:background="@drawable/round_rectangle_white"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:paddingEnd="40dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancel_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/return_arrow_search" />

            </RelativeLayout>
    </RelativeLayout>
</FrameLayout>